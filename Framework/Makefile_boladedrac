# Makefile per boladedrac
CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra -O2 -g
INCLUDES = -I./Core
LIBS = 

CORE_OBJECTS = GameDefinition.o Action.o Board.o Game.o
MAIN_SOURCE = boladedrac_main.cc
EXECUTABLE = boladedrac_game

all: $(EXECUTABLE)

$(EXECUTABLE): $(MAIN_SOURCE) $(CORE_OBJECTS)
	$(CXX) $(CXXFLAGS) $(INCLUDES) $(MAIN_SOURCE) $(CORE_OBJECTS) -o $(EXECUTABLE) $(LIBS)

clean:
	rm -f $(EXECUTABLE) $(MAIN_SOURCE)

.PHONY: all clean
