# Configuració del joc BolaDeDrac2015 per al Framework Genèric

[GAME_INFO]
game_name boladedrac
version v1
description "Joc de Bola de Drac 2015 - Framework Genèric"

[GAME_PARAMETERS]
max_players 4
default_rounds 600
default_rows 15
default_cols 31

# Paràmetres específics de BolaDeDrac2015
nb_capsules 3
nb_balls 2
nb_beans 4
nb_kintons 4
goku_regen_time 150
bean_regen_time 60
kinton_regen_time 30
kinton_life_time 25
max_strength 999
res_strength 200
moving_penalty 20
kamehame_penalty 800
combat_penalty 35

[CELL_TYPES]
# Tipus de cel·les del joc
Empty .
Rock X
Capsule C
Ball B
Kinton K
Bean b

[UNIT_TYPES]
# Tipus d'unitats (Gokus)
# Format: name symbol max_health initial_health regen_rate movement_range attack_range attack_power defense can_capture can_move can_attack [abilities...]
normal normal 999 999 0 1 1 0 0 false true false
on_kinton on_kinton 999 999 0 1 1 0 0 false true false
with_ball with_ball 999 999 0 1 1 0 0 false true false
on_kinton_with_ball on_kinton_with_ball 999 999 0 1 1 0 0 false true false

[ACTION_TYPES]
# Tipus d'accions disponibles
# Format: name id "param1=type1 param2=type2 ..." description
Moving 1 "direction=Dir" "Moviment del Goku"
Throwing 2 "direction=Dir" "Llançament de Kamehame"

[ACTION_STRUCTURE]
# Estructura de les accions
Moving "direction=Dir" max_per_round=1
Throwing "direction=Dir" max_per_round=1

[DIRECTIONS]
# Direccions del joc (8 direccions)
N 0
NE 1
E 2
SE 3
S 4
SW 5
W 6
NW 7
None -1

[MAP_SECTIONS]
# Seccions que es troben al mapa després del grid
# Format: section_name = "keyword1 keyword2 ..."
object_sections "beans kintons"
unit_sections "normal on_kinton with_ball on_kinton_with_ball"

[MAP_OBJECTS]
# Objectes que es poden trobar al mapa
# Format: object_name = "char_symbol"
Capsule C
Ball B
Kinton K
Bean b
Rock X
Empty .

[UNIT_PARSING]
# Format per llegir unitats del mapa
# Format: unit_type = "param1 param2 param3 ..."
normal "x y player direction strength regen kinton ball"
on_kinton "x y player direction strength regen kinton ball"
with_ball "x y player direction strength regen kinton ball"
on_kinton_with_ball "x y player direction strength regen kinton ball"
